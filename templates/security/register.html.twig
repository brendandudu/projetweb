{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | S'inscrire{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/register.css') }}">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/simple-line-icons/2.4.1/css/simple-line-icons.min.css" rel="stylesheet">
{% endblock %}

{% block body %}

    <div class="registration-form">
        {{ form_start(form, {'attr': {'class': 'form'}}) }}
        <div class="form-icon">
            <span><i class="icon icon-user"></i></span>
        </div>

        {% if not form.vars.valid %}
        <div class="alert alert-danger">
            <ul>
                {% for child in form.children %}
                    {% for error in child.vars.errors %}
                        <li>{{ error.message }}</li>
                    {% endfor %}
                {% endfor %}
            </ul>
        </div>
        {% endif %}

        <div class="form-group">
            <label for="sel1">Type d'utilisateur:</label>
            {{ form_widget(form.roles, {'attr': {'class' : 'form-control roles'}}) }}
        </div>
        <div class="form-group">
            {{ form_widget(form.firstName, {'attr': {'placeholder': 'Prenom', 'class' : 'form-control item'}}) }}
        </div>
        <div class="form-group">
            {{ form_widget(form.lastName, {'attr': {'placeholder': 'Nom', 'class' : 'form-control item'}}) }}
        </div>
        <div class="form-group">
            {{ form_widget(form.email, {'attr': {'placeholder': 'Email', 'class' : 'form-control item'}}) }}
        </div>
        <div class="form-group">
            {{ form_widget(form.password, {'attr': {'placeholder': 'Mot de passe', 'class' : 'form-control item'}}) }}
        </div>
        <div class="form-group">
            {{ form_widget(form.confirm_password, {'attr': {'placeholder': 'Répéter le mot de passe', 'class' : 'form-control item'}}) }}
        </div>



        <div class="form-group mb-0">
            <button type="submit" class="btn btn-block next-step">Créer un compte</button>
        </div>
        {{ form_end(form) }}
    </div>

{% endblock %}